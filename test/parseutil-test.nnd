(use nendo.test)
(test-start "parseutil")

;;===================================================================
;;-------------------------------------------------------------------
(test-section "parseutil")
(use stowm.parseutil)
(test-module 'parseutil)

(test* "parseutil (1)" '(
                         "/xxx/yyy"
                         "aaaa-1.2.3.tar.gz")
       (stowm-split-path
        "/xxx/yyy/aaaa-1.2.3.tar.gz"))

(test* "parseutil (2)" '(
                         "/"
                         "aaaa-1.2.3.tar.gz")
       (stowm-split-path
        "/aaaa-1.2.3.tar.gz"))

(test* "parseutil (3)" '(
                         "."
                         "aaaa-1.2.3.tar.gz")
       (stowm-split-path
        "aaaa-1.2.3.tar.gz"))

(test* "parseutil (4)" '(
                         "."
                         "")
       (stowm-split-path
        ""))

(test* "parseutil (5)" '(
                         "aaaa"
                         "1.2.3"
                         "tar.gz")
       (stowm-split-filename
        "aaaa-1.2.3.tar.gz"))

(test* "parseutil (6)" '(#f #f #f)
       (stowm-split-filename
        "aaaa.tar.gz"))

(test* "parseutil (7)" '(#f #f #f)
       (stowm-split-filename
        "aaaa1.2.3.tar.gz"))

(test* "parseutil (8)" '(#f #f #f)
       (stowm-split-filename
        "aaaa-1.2.3.gz"))

(test* "parseutil (9)" '(
                         "aaaa"
                         "1.2.3"
                         "tar.bz2")
       (stowm-split-filename
        "aaaa-1.2.3.tar.bz2"))

(test* "parseutil (10)" '(
                         "aaaa"
                         "1.2.3"
                         "tar.xz")
       (stowm-split-filename
        "aaaa-1.2.3.tar.xz"))

(test* "parseutil (11)" '(
                         "aaaa"
                         "1.2.3"
                         "tar.z")
       (stowm-split-filename
        "aaaa-1.2.3.tar.z"))

(test* "parseutil (12)" '(
                         "aaaa"
                         "1.2.3"
                         "tar.Z")
       (stowm-split-filename
        "aaaa-1.2.3.tar.Z"))

;;===================================================================
(test-end)
